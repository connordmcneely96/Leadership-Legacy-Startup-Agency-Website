{
  "name": "leadership-legacy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "cf:dev": "wrangler dev",
    "cf:deploy": "wrangler deploy",
    "cf:pages:build": "next build",
    "cf:pages:deploy": "npm run build && wrangler pages deploy out",
    "cf:db:create": "wrangler d1 create leadership-legacy-db",
    "cf:db:migrate": "wrangler d1 execute leadership-legacy-db --file=./schema/schema.sql",
    "cf:r2:create": "wrangler r2 bucket create leadership-legacy-assets",
    "cf:kv:create": "wrangler kv:namespace create LEADERSHIP_CONFIG",
    "cf:setup": "npm run cf:db:create && npm run cf:r2:create && npm run cf:kv:create"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.559.0",
    "next": "16.0.8",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tailwind-merge": "^3.4.0",
    "hono": "^4.6.7",
    "ky": "^1.5.0",
    "@tanstack/react-query": "^5.62.0",
    "react-dropzone": "^14.3.5",
    "@dnd-kit/core": "^6.1.0",
    "@tiptap/react": "^2.6.6",
    "@tiptap/starter-kit": "^2.6.6",
    "resend": "^2.0.0",
    "zod": "^3.23.8",
    "drizzle-orm": "^0.36.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251223.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.54.0",
    "better-sqlite3": "^9.6.0"
  }
}
